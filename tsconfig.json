{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "es2018",
    "module": "commonjs",
    "lib": ["dom", "es2018"],
    "declaration": true,
    "declarationMap": true,

    "jsx": "react",

    "strict": true,
    "strictNullChecks": true,

    /* Additional Checks */
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["**/tests/**/*", "**/dist/**/*", "**/examples/**/*"]
}
